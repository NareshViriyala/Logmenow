<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/ll_col1"
            android:background="@drawable/border_popup"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_oid"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:id="@+id/img_itemtype"
                android:src="@drawable/ic_nonveg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Veg Biryani"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_itemname"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:visibility="visible"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/img_qtyp"
                android:src="@drawable/ic_qtym"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_qty"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:visibility="visible"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/img_qtym"
                android:src="@drawable/ic_qtyp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/ll_col2"
            android:background="@drawable/border_popup"
            android:layout_height="match_parent"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="120/-"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_itemprice"/>
        </LinearLayout>

</TableRow>