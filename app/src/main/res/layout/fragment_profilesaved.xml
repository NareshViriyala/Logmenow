<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/border_popup"
        android:id="@+id/rl_personalinfo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_personalinfo"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Basic Information"
                android:textColor="@color/white"
                android:id="@+id/tv_personalinfotitle"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/ll_personalinfo"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_personalinfo"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_personalinfo"
            android:tint="@color/colorPrimary"
            android:id="@+id/img_personalinfo"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/border_popup"
        android:id="@+id/rl_homeaddress">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_homeaddress"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Home Address"
                android:textColor="@color/white"
                android:id="@+id/tv_homeaddresstitle"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/ll_homeaddress"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_homeaddress"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_homeaddress"
            android:tint="@color/colorPrimary"
            android:id="@+id/img_homeaddress"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/border_popup"
        android:id="@+id/rl_officeaddress">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_officeaddress"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Office Address"
                android:textColor="@color/white"
                android:id="@+id/tv_officeaddresstitle"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/ll_officeaddress"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_officeaddress"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_officeaddress"
            android:tint="@color/colorPrimary"
            android:id="@+id/img_officeaddress"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_plus"
            app:backgroundTint="@color/colorPrimary"
            app:useCompatPadding="true"
            app:borderWidth="0dp"
            app:elevation="4sp"/>
    </RelativeLayout>

</LinearLayout>