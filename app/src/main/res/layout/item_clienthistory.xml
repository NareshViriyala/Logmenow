<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:id="@+id/tv_type"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_hospital">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/img_hospital"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="Appollo Hospitals\nDr.Suman\nAppointment Date:28/08/2016\nIn Time: 08:30 PM\nOut Time: 08:48 PM\n"
            android:id="@+id/tv_hospitalinfo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_restaurant">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/img_restaurant"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Paradise food court\nDate:28/08/2016\nTotal bill: 467/-\n"
            android:id="@+id/tv_restaurantinfo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_securitycheck">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/img_security"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Malaysian Township\nDate:28/08/2016\nTime: 08:50 PM\nInfo provided:\n"
            android:id="@+id/tv_securitycheckinfo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_parking">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/img_parking"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Sujana Forum mall\nDate:28/08/2016\nIn Time: 08:50 PM\nOut Time:09:15 PM\nVehicle No: AP 28 DV 6834(4 Wheeler)\nTariff: 40\\-"
            android:id="@+id/tv_parkinginfo"/>
    </LinearLayout>
</LinearLayout>