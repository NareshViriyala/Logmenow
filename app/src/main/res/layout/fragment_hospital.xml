<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Doctor Details"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/ll_docdetails">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/border_popup"
                android:visibility="visible"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY"
                android:id="@+id/img_doc"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_popup"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:id="@+id/tv_docdetails"/>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Queue time &amp; Consultation Hours "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:id="@+id/ll_bhwt"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="@drawable/border_popup"
                android:orientation="vertical"
                android:id="@+id/ll_status">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment No"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_mainapptid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queue number"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_mainappstatus"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting time"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/red"
                    android:id="@+id/tv_maintimer"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_businesshours">

            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Hospital Details"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/ll_hospdetails">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/border_popup"
                android:visibility="visible"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY"
                android:id="@+id/img_hosp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_popup"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:id="@+id/tv_hospdetails"/>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/ll_btns"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Scan Again"
                android:gravity="center"
                android:id="@+id/btn_scanagain"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_scanagain_processing"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/loading"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Take Appointment"
                android:gravity="center"
                android:id="@+id/btn_takeappt"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:id="@+id/img_getmenu_processing"
                android:layout_centerInParent="true"
                android:src="@drawable/loading"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>