<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_home_grid"
        android:id="@+id/ll_fragprofile"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginRight="1dp"
                android:id="@+id/ll_personalinfo">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_personalinfo"
                    android:id="@+id/img_personalinfo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Basic Info"
                    android:id="@+id/tv_personalinfo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginRight="1dp"
                android:id="@+id/ll_homeaddress">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_homeaddress"
                    android:id="@+id/img_homeaddress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:text="Home Address"
                    android:id="@+id/tv_homeaddress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginRight="1dp"
                android:id="@+id/ll_officeaddress">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_officeaddress"
                    android:id="@+id/img_officeaddress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Office Address"
                    android:id="@+id/tv_officeaddress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="bottom"
                android:id="@+id/ll_custominfo">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_custominfo"
                    android:id="@+id/img_custominfo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Custom Info"
                    android:id="@+id/tv_custominfo"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_gridviews"
            android:background="@color/white">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:background="@drawable/border_popup"
                android:id="@+id/gv_personalinfo">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="First Name :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_fname"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="textEmailAddress"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Middle Name :"
                    android:layout_gravity="fill_horizontal"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_mname"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="textEmailAddress"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="Last Name :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_lname"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="textEmailAddress"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="Email :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_email"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="textEmailAddress"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:text="Phone :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_phone"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="number"
                    android:theme="@style/MyEditTextTheme"/>

                <Button android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/btn_save_personalinfo"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"/>
            </GridLayout>
            </ScrollView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_popup"
                android:visibility="gone"
                android:id="@+id/gv_homeaddress">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Address Line1 :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_add1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Address Line2 :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_add2"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="Land Mark :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_landmark"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="City :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_city"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:text="State :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_state"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:text="Country :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_country"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:text="Zip :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_zip"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <Button android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/btn_save_homeaddress"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"/>
            </GridLayout>
            </ScrollView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_popup"
                android:visibility="gone"
                android:id="@+id/gv_officeaddress">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Address Line1 :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofcadd1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Address Line2 :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofcadd2"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="City :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofccity"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:text="State :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofcstate"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:text="Country :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofccountry"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:text="Zip :"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"/>

                <EditText android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_ofczip"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:theme="@style/MyEditTextTheme"/>

                <Button android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/btn_save_officeaddress"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"/>
            </GridLayout>
            </ScrollView>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_popup"
                android:visibility="gone"
                android:id="@+id/gv_custominfo">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/ll_custom"
                            android:background="@drawable/spinner_style"
                            android:layout_row="0"
                            android:layout_column="0">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="Select:"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:id="@+id/spnr_items"
                                android:layout_marginBottom="5dp">
                            </Spinner>
                        </LinearLayout>

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="10dp"
                            android:layout_above="@+id/btn_save_custominfo"
                            android:layout_below="@+id/ll_custom"
                            android:dividerHeight="10dp"
                            android:divider="@color/grey"
                            android:id="@+id/lv_items">

                        </ListView>

                        <Button android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:id="@+id/btn_save_custominfo"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="Generate QR"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimary"/>
                </RelativeLayout>
            </GridLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_savedinfo"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/border_popup"
                    android:id="@+id/rl_info">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tv_savedinfo"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/img_editinfo"/>
                </RelativeLayout>
                <Button android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/btn_generateqr"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Generate QR"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>