<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_popup"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="Add Vehicle"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="Vehicle No    "
            android:layout_gravity="bottom"/>

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_vehno"
            android:layout_weight="1"
            android:theme="@style/MyEditTextTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="Vehicle Type "
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_wheeler2"
            android:src="@drawable/wheeler2"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_unselected"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_wheeler4"
            android:src="@drawable/wheeler4"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_unselected"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_wheeler3"
            android:tint="@color/colorPrimary"
            android:src="@drawable/wheeler3"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_unselected"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_wheeler0"
            android:src="@drawable/wheeler0"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_unselected"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/btn_Set"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cancel"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:id="@+id/btn_Cancel"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

    </LinearLayout>



</LinearLayout>