<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_name"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Name"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_email"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_phone"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/vwgrp_dateofbirth">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tip_dob"
            android:theme="@style/MyEditTextTheme">
            <EditText
                android:id="@+id/et_dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Date of birth - dd/mm/yyyy"
                android:theme="@style/MyEditTextTheme"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_alignRight="@+id/tip_dob"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_calendar"
            android:layout_marginRight="6dp"
            android:clickable="true"
            android:id="@+id/img_cal"/>
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_age"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Age - in years"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/vwgrp_gender">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tip_gender"
            android:theme="@style/MyEditTextTheme">
            <EditText
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Gender"
                android:theme="@style/MyEditTextTheme"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_alignRight="@+id/tip_gender"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_male"
            android:layout_marginRight="6dp"
            android:clickable="true"
            android:id="@+id/img_male"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_alignRight="@+id/img_male"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_female"
            android:layout_marginRight="56dp"
            android:clickable="true"
            android:id="@+id/img_female"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/vwgrp_vehicleno">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tip_vehicleno"
            android:theme="@style/MyEditTextTheme">
            <EditText
                android:id="@+id/et_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Vehicle No"
                android:theme="@style/MyEditTextTheme"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tip_vehicleno"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="-6dp"
                android:gravity="end">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/wheeler2"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_wheeler2"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/wheeler3"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/img_wheeler3"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="@color/colorPrimary"
                    android:scaleType="fitXY"
                    android:src="@drawable/wheeler4"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/img_wheeler4"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/wheeler0"
                    android:clickable="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_wheeler0"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle type"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_comingfrom"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_comingfrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Coming from"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/vwgrp_purposeofvisit">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tip_purposeofvisit"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_purposeofvisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Purpose of visit"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:tint="@color/colorPrimary"
        android:scaleType="fitXY"
        android:layout_alignRight="@+id/tip_purposeofvisit"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_qtym"
        android:clickable="true"
        android:layout_marginRight="26dp"
        android:id="@+id/img_povo"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="6"
        android:useDefaultMargins="true"
        android:visibility="gone"
        android:id="@+id/gl_visitoptions">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:padding="3dp"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:src="@drawable/ic_fooddeliviry"
            android:id="@+id/img_fooddelivery"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="Delivery"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_fooddelivery"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="3dp"
            android:clickable="true"
            android:src="@drawable/ic_deliviry"
            android:id="@+id/img_postaldelivery"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="Courier"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_postaldelivery"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="2"
            android:clickable="true"
            android:padding="3dp"
            android:src="@drawable/ic_interview"
            android:id="@+id/img_interview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="Interview"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_interview"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="3"
            android:clickable="true"
            android:padding="3dp"
            android:src="@drawable/ic_visitor"
            android:id="@+id/img_pvisit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center"
            android:text="Personal"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_pvisit"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:padding="3dp"
            android:src="@drawable/ic_visitor"
            android:id="@+id/img_ovisit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center"
            android:text="Official"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_ovisit"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_gravity="center"
            android:padding="3dp"
            android:clickable="true"
            android:src="@drawable/ic_edit1"
            android:id="@+id/img_other"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_gravity="center"
            android:text="Other"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_other"/>
    </GridLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_visitingcompany"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_visitingcompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Visiting company"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_meetingperson"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_meetingperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Meeting person"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_block"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Block number"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vwgrp_flat"
        android:visibility="gone"
        android:theme="@style/MyEditTextTheme">
        <EditText
            android:id="@+id/et_flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Flat number"
            android:theme="@style/MyEditTextTheme"/>
    </android.support.design.widget.TextInputLayout>

    <Button android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_savegenqr"
        android:text="Generate QR"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>